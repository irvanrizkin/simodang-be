// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @default(autoincrement()) @id
  email       String   @unique
  password    String
  name        String
  phoneNum    String?
  address     String?
  profilePic  String?
  token       String?
  ponds       Pond[]
}

model Pond {
  id                   Int       @default(autoincrement()) @id
  deviceId             String
  address              String
  city                 String
  seedDate             DateTime
  tempHigh             Int       @default(30)
  tempLow              Int       @default(28)
  phHigh               Decimal   @default(9)
  phLow                Decimal   @default(6.5)
  tdoHigh              Int       @default(8)
  tdoLow               Int       @default(4)
  tdsHigh              Int       @default(1200)
  tdsLow               Int       @default(1000)
  turbiditiesHigh      Decimal   @default(0.25)
  turbiditiesLow       Decimal   @default(0.1)
  status               String    @default("green")
  user                 User      @relation(fields: [userId], references: [id])
  userId               Int
}
